/*
*    Media Queries
*/



// > 320px
@media screen and (min-width: $bp0)

	body
		font-size 80%
	header
		text-align center
		width 100%
		
	.menu
		display block
		margin 0
		max-width 100%
		text-align center
	main
		min-width 90%
		text-align center
			

// // > 480px
// @media screen and (min-width: $bp0)

// > 600px
@media (min-width: $bp2)

	body 
		font-size 100%
		
	.menu
		max-width 70%
		
		@extends .vam
	
	.logo
		max-width 25%
		text-align left
		
		@extends .vam

